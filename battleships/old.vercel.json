{
  "version": 2,
  "builds": [
    {
      "src": "battleships/wsgi.py",
      "use": "@ardnt/vercel-python-wsgi",
      "config": { "maxLambdaSize": "15mb", "runtime": "python3.9" }
    },
    {
      "src": "./build.sh",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "staticfiles_build"
      }
    }
  ],
  "routes": [
    {
      "src": "game/static/game(.*)",
      "dest": "game/static/game/$1"
    },
    {
      "src": "/(.*)",
      "dest": "battleships/wsgi.py"
    }
  ]
}
